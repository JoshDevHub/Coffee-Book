<div class="items-center gap-4 relative" data-controller="dropdown">
  <button type="button"
          data-dropdown-target="toggleBtn"
          data-action="dropdown#toggleVisibility click@window->dropdown#hide"
  >
    User
  </button>

  <div
    data-dropdown-target="menu"
    class="hidden absolute transition transform origin-top-right right-0 bg-gray-700"
  >
  <%= link_to "Profile",
    user_path(current_user),
    data: { action: "dropdown#toggleVisibility" }
  %>
  <%= link_to "Logout",
    destroy_user_session_path,
    data: { action: "dropdown#toggleVisibility", turbo_method: :delete }
  %>
  </div>
</div>
