<header class="flex text-lg justify-between border-b-2 border-b-slate-900
               mb-4 px-4 py-1 bg-slate-800 text-white">
  <div class="flex items-center">
    <%= inline_svg_tag("coffee.svg") %>
    <%= form_with url: users_path, method: :get do |form| %>
      <%= form.label :search, class: "hidden" %>
      <%= form.text_field :search, class: "rounded-md text-black" %>
      <%= form.submit "Search" %>
    <% end %>
  </div>
  <nav class="flex items-center gap-4">
    <%= link_to "Home",
      root_path,
      class: "hover:bg-slate-700 py-2 px-2 rounded-md"
    %>
    <%= link_to current_user.unread_notifications? ? "Notifications+" : "Notifications",
      user_notifications_path(current_user),
      class: "hover:bg-slate-700 py-2 px-2 rounded-md"
    %>
    <%= link_to "Friends",
      friend_list_path(current_user),
      class: "hover:bg-slate-700 py-2 px-2 rounded-md"
    %>
  <%= link_to "Find Friends",
    users_path,
    class: "hover:bg-slate-700 py-2 px-2 rounded-md"
  %>
  </nav>
  <div class="flex items-center gap-4">
    <%= link_to user_path(current_user) do %>
      <%= image_tag avatar_url_for(current_user.profile, variant: :icon),
        class: "rounded-full"
      %>
    <% end %>
    <%= link_to "Logout",
      destroy_user_session_path,
      class: "hover:bg-slate-700 py-2 px-2 rounded-md",
      data: { turbo_method: :delete }
    %>
  </div>
</header>
