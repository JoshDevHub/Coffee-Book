<h1 class="text-center text-2xl font-bold mb-4 text-slate-800">
  Your Notifications
</h1>

<ul class="flex flex-col items-center w-1/2 mx-auto gap-4">
  <% @notifications.each do |notification| %>
    <li class="border border-black w-1/2 rounded-md p-4 bg-gray-100
               flex justify-between items-center"
    >
      <%= notification.message %>
      <%= link_to "View", notification.url %>
    </li>
  <% end %>
</ul>
