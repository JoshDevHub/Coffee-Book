<main class="flex flex-col items-center">
  <h1>Your Timeline</h1>

  <%= link_to "New Post", new_post_path %>

  <div class="flex flex-col gap-4 w-1/2 min-w-[320px]">
    <% @posts.each do |post| %>
      <%= render post, user_like: post.find_like_from(current_user) %>
    <% end %>
  </div>
</main>
