<main class="flex flex-col items-center">
  <div class="flex flex-col gap-4 w-1/2 min-w-[320px]">
    <%= render @post, post: @post %>
  </div>

  <div>
    <h2>Comments:</h2>
    <%= render @post.comments %>
    <%= render "comments/form", comment: [@post, @post.comments.build] %>
  </div>
</main>
