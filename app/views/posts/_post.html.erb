<div class="flex flex-col shadow-lg border border-gray-300 rounded-md mb-6">
  <div class="bg-slate-600 text-white p-2 flex justify-between items-center rounded-t-md mb-2">
    <div>
      <p class="font-bold"><%= post.author.name %></p>
      <p><%= "#{distance_of_time_in_words_to_now(post.updated_at)} ago" %></p>
    </div>
    <% if current_user == post.author %>
      <%= render "posts/post_actions", post: post %>
    <% end %>
  </div>

  <div class="p-2">
    <%= post.body %>
  </div>

  <% if post.photo.attached? %>
    <%= image_tag post.photo.variant(:timeline), class: "px-2" %>
  <% end %>

  <div class="flex items-center gap-4">
    <%= render "likes/likes", likeable: post %>
    <%= render "posts/comment_count", post: post %>
  </div>
</div>
