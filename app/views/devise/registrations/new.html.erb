<div class="flex flex-col items-center">
  <h2 class="text-2xl text-slate-800 font-bold mb-4">Sign up</h2>

  <div>
    <%= form_for(
    resource,
    as: resource_name,
    url: registration_path(resource_name),
    html: { class: "min-w-[33%]" },
    data: { turbo: false }
    ) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col mb-4">
      <%= f.label :first_name, class: "text-slate-800 font-bold" %>
      <%= f.text_field :first_name,
        autofocus: true,
        required: true,
        class: "border border-black py-1 px-2 w-full"
      %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :last_name, class: "text-slate-800 font-bold" %>
      <%= f.text_field :last_name,
        required: true,
        class: "border border-black py-1 px-2 w-full"
      %>
    </div>

    <div class="flex flex-col mb-8">
      <%= f.label :username, class: "text-slate-800 font-bold" %>
      <%= f.text_field :username,
        required: true,
        class: "border border-black py-1 px-2 w-full"
      %>
    </div>

    <div class="flex flex-col mb-8">
      <%= f.label :email, class: "text-slate-800 font-bold" %>
      <em class="text-sm">Welcome email will be sent</em>
      <%= f.email_field :email,
        autocomplete: "email",
        required: true,
        class: "border border-black py-1 px-2 w-full" %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password, class: "text-slate-800 font-bold" %>
      <% if @minimum_password_length %>
        <em class="text-sm"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      <%= f.password_field :password,
        autocomplete: "new-password",
        required: true,
        class: "border border-black py-1 px-2 w-full"
      %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password_confirmation, class: "text-slate-800 font-bold" %>
      <%= f.password_field :password_confirmation,
        autocomplete: "new-password",
        required: true,
        class: "border border-black py-1 px-2 w-full"
      %>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Sign up", class: "btn btn-primary mb-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
