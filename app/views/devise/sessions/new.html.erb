<main class="flex flex-col items-center">
  <h2 class="text-2xl text-slate-800 font-bold mb-4">Login</h2>

  <%= form_for(
    resource,
    as: resource_name,
    url: session_path(resource_name),
    html: { class: "min-w-[33%]" },
    data: { turbo: false }
  ) do |f| %>
    <div class="flex flex-col mb-4">
      <%= f.label :email, class: "text-slate-800 font-bold" %>
      <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        required: true,
        class: "border border-black py-1 px-2 w-full"
      %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password, class: "text-slate-800 font-bold" %>
      <%= f.password_field :password,
        autocomplete: "current-password",
        required: true,
        class: "border border-black py-1 px-2"
      %>
      <div class="flex justify-between flex-col lg:flex-row">
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <%= link_to "Forgot your password?",
          new_password_path(resource_name),
          class: "text-slate-800 hover:text-slate-700 transition underline
                  underline-offset-4 hover:no-underline"
        %>
      </div>
    </div>

    <div class="flex justify-center">
      <%= f.submit "Log in",
        class: "btn btn-primary mb-2"
      %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
